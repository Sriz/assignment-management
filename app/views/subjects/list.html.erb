<div class="subject list">
  <%= link_to "Back to list", {:controller => 'access', :action => 'menu'} %>
  <h2>Subjects</h2>
  
    <%= link_to("Add New Subject", {:action => 'new'}, :class=>'action new') %>

<br />
  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>Semester</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
      <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.semester %></td>
      <td><%= subject.name %></td>
      <td class="center"><%= subject.visible ? 'Yes' : 'No' %></td>
      <td class="center"><%= subject.pages.size %></td>
      <td class="actions">
     
        <%= link_to 'Show', subject_path(subject) %>
          <%= link_to 'Edit', edit_subject_path(subject) %>
        <%= link_to "Delete", subject_path(subject), method: :delete, data: { confirm: 'Are you sure?'} %>

      </td>
    </tr>
    <% end %>
  </table>
</div>