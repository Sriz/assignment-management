<div class="subject list">
 <%= link_to "Back to list", {:controller => 'access', :action => 'menu'} %>

  <h2>Users</h2>
  

<br />
  <table class="listing" summary="Subject list">
    <tr class="header">
      
      <th>Email</th>
       <th>Password</th>
       <th> Role </th>
      
    </tr>
      <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.encrypted_password %></td>
      <td> <%= user.role %> </td>
      <td class="actions">
       <%= link_to 'Show', user_path(user) %>  
       <%= link_to 'Edit', edit_user_path(user) %>  
      <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: 'Are you sure?'} %> 

      </td>
    </tr>
    <% end %>
  </table>
</div>
